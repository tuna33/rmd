{
	"compilerOptions": {
		"module": "ES6",
		"target": "ES5",
		"jsx": "react",
		"allowJs": false,
		"sourceMap": true,
		"strict": true,
		"allowSyntheticDefaultImports": true,
		"baseUrl": "./",
		"paths": {
			"@components": ["src/components/index.ts"],
			"@views": ["src/views/index.ts"],
			"@types": ["src/types.d.ts"],
		},
		"moduleResolution": "node",
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "**/*.spec.ts"]
}